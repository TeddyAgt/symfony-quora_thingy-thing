{% extends 'base.html.twig' %}

{% block title %}Wonder{% endblock %}

{% block body %}

    <ul>
        {% for question in questions %}
            <li  class="block block-shadow d-flex flex-row mb-20">
                {% include "partials/_rating.html.twig" with { rating: question.rating, from: "question", id: question.id } %}
                <a href="{{ path("app_question_show", {id: question.id}) }}" class="flex-fill d-flex flex-column">
                    <div class="mb-20 question-content pb-20">
                        <h3 class="mb-20">{{ question.title }}</h3>
                        <p>{{ question.content }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <img src="https://randomuser.me/api/portraits/men/73.jpg" alt="" class="avatar mr-10">
                            <small>Demand√© par <span class="clickable">Nathan Truc</span></small>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fa-regular fa-comment mr-10"></i>
                            <p>{{ question.nbrOfResponse }}</p>
                        </div>
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
