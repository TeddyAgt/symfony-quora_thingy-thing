{% extends 'base.html.twig' %}

{% block title %}Wonder{% endblock %}

{% block body %}

  <ul>
    {% for question in questions %}
      <a href="{{ path("app_question_show", {id: question.id}) }}" class="block block-shadow d-flex flex-row mb-20">
        <div class="d-flex flex-column mr-20 align-items-center">
          <i class="fa-solid fa-up-long {{ question.upvote > 0 ? "rating-up" : "" }}"></i>
          <p {% if question.upvote > 0 %} class="rating-up text-small" {% elseif question.upvote < 0 %} class="rating-down text-small" {% endif %}>
            {{ question.upvote }}
          </p>
          <i class="fa-solid fa-down-long {{ question.upvote < 0 ? "rating-down" : "" }}"></i>
        </div>
        <div class="flex-fill d-flex flex-column">
          <div class="mb-20 question-content pb-20">
            <h3 class="mb-20">{{ question.title }}</h3>
            <p>{{ question.content }}</p>
          </div>
          <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center">
              <img src="{{ question.author.avatar }}" alt="" class="avatar mr-10">
              <small>Demand√© par <span class="clickable">{{ question.author.name }}</span></small>
            </div>
            <div class="d-flex align-items-center">
              <i class="fa-regular fa-comment mr-10"></i>
              <p>{{ question.nbrOfResponse }}</p>
            </div>
          </div>
        </div>
      </a>
    {% endfor %}
  </ul>

{% endblock %}
